{
    "compilerOptions": {
        "module": "es6",
        "target": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "noEmit": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["src/preprocessor"],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        },
        "exclude": []
    }
}
